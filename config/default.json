{
    "Server": {
        "host": "localhost",
        "port": 8082,
        "timeout": 2000   // timeout in milliseconds
    },
    "Routes": [
        {
            "url": "http://myapp.com/pub",
            "source": "/test/mocks/pub",
            "target": "/pub",
            "suffix": ".xml",
            "type": "application/xml"
        },
        {
            "url": "http://myapp.com/xml",
            "source": "/test/mocks/xml",
            "target": "/xml",
            "suffix": ".xml",
            "type": "application/xml",
            "method": "POST",
            "postMap": ["user.username"]
        }
    ]
}